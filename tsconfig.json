{
    "compilerOptions": {
      "target": "es6", // o es5
      "module": "commonjs", // Cambia a commonjs
      "outDir": "./build", // Donde se guardar치n los archivos compilados
      "rootDir": "./src", // Carpeta de tu c칩digo fuente
      "strict": true, // Para habilitar comprobaciones estrictas
      "esModuleInterop": true, // Para permitir la interoperabilidad entre m칩dulos CommonJS y ES
      "skipLibCheck": true // Opcional, omitir chequeo de tipos en archivos de declaraci칩n
    },
    "include": ["src/**/*"], // Incluye todos los archivos en src
    "exclude": ["node_modules"] // Excluye la carpeta node_modules
  }
  